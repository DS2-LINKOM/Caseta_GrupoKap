<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">


    <!---ENCABEZADO-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/feb"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">


                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="28dp"
                        android:onClick="showPopup"
                        android:src="@drawable/menu" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:fontFamily="@font/fontNegritaC"
                        android:text="Modificar Trabajador"
                        android:textColor="@color/fontColorBlanco"
                        android:textSize="@dimen/fontSizeEncabezados" />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/rlPermitido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="visible">


                    <Button
                        android:id="@+id/btn_eliminar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/boton_descargar"
                        android:gravity="center"
                        android:text="ELIMINAR"
                        android:textColor="@color/fontColorNegro"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Tipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Tipo"
                        android:layout_gravity="center"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />

                    <customfonts.MyTextView
                        android:id="@+id/setTipo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/fontNormalC"
                        android:textColor="@color/fontColorNegro"
                        android:textSize="@dimen/fontSize" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    ></LinearLayout>


                <LinearLayout
                    android:id="@+id/Departamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Departamento"
                        android:layout_gravity="center"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />

                    <customfonts.MyTextView
                        android:id="@+id/setDepa"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/fontNormalC"
                        android:textColor="@color/fontColorNegro"
                        android:textSize="@dimen/fontSize" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    ></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">


                    <TextView
                        android:id="@+id/nombre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Nombre:"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />

                    <customfonts.MyEditText
                        android:id="@+id/setNombre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/fontNormalC"
                        android:textColor="@color/fontColorNegro"
                        android:textSize="@dimen/fontSize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    ></LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Teléfono: (Opcional)"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />

                    <customfonts.MyEditText
                        android:id="@+id/setTel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/fontNormalC"
                        android:textColor="@color/fontColorNegro"
                        android:textSize="@dimen/fontSize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    ></LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Correo: (Opcional)"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />

                    <customfonts.MyEditText
                        android:id="@+id/setCorreo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/fontNormalC"
                        android:textColor="@color/fontColorNegro"
                        android:textSize="@dimen/fontSize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    ></LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Comentarios: (Opcional)"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />

                    <customfonts.MyEditText
                        android:id="@+id/setComen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lines="5"
                        android:fontFamily="@font/fontNormalC"
                        android:textColor="@color/fontColorNegro"
                        android:textSize="@dimen/fontSize" />
                    />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    ></LinearLayout>

                <LinearLayout
                    android:id="@+id/Foto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/nombre_foto1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Foto"
                        android:layout_gravity="center"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />

                    <Button
                        android:id="@+id/btn_foto1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/boton_descargar"
                        android:gravity="center"
                        android:text="TOMAR FOTO"
                        android:textColor="@color/fontColorNegro"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/espacio1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    android:orientation="vertical"
                    android:visibility="visible"></LinearLayout>

                <LinearLayout
                    android:id="@+id/Foto1View"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txtFotoRegTrab1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/negrita"
                        android:paddingTop="50dp"
                        android:paddingBottom="50dp"
                        android:text="Cargando fotografía"
                        android:textAlignment="center"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize" />

                    <ImageView
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="161dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:visibility="gone" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/espacio2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    android:orientation="vertical"
                    android:visibility="visible">
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Foto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/nombre_foto2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="INE"
                        android:layout_gravity="center"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />

                    <Button
                        android:id="@+id/btn_foto2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/boton_descargar"
                        android:gravity="center"
                        android:text="TOMAR FOTO"
                        android:textColor="@color/fontColorNegro"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/espacio3"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    android:orientation="vertical"
                    android:visibility="visible"></LinearLayout>

                <LinearLayout
                    android:id="@+id/Foto2View"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txtFotoRegTrab2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/negrita"
                        android:paddingTop="50dp"
                        android:paddingBottom="50dp"
                        android:text="Cargando fotografía"
                        android:textAlignment="center"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize" />

                    <ImageView
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="161dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:visibility="gone" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/espacio4"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    android:orientation="vertical"
                    android:visibility="visible">
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/registrar1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontSize"
                        android:textColor="@color/fontColorGris"
                        android:layout_gravity="center"
                        />

                    <Button
                        android:id="@+id/modificar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/boton_descargar"
                        android:gravity="center"
                        android:text="Modificar"
                        android:textColor="@color/FormTextColor"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/espacio5"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    android:orientation="vertical"
                    android:visibility="visible"
                    >
                </LinearLayout>


            </LinearLayout>

        </ScrollView>
    </LinearLayout>



</LinearLayout>



